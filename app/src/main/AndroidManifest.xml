<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurantapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantApp">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.SignupScreen"
            android:exported="true" />
        <activity
            android:name=".AddDialog"
            android:exported="true" />
        <activity
            android:name=".ui.NewActivity"
            android:exported="true" />
        <activity
            android:name=".ui.HomeScreen"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.LoginScreen"
            android:exported="true" />
        <activity
            android:name=".ui.SplashScreen"
            android:exported="true"
            android:theme="@style/splashcreenbackground">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>